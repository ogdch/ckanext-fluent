{
  "scheming_version": 1,
  "dataset_type": "dataset-multi",
  "about_url": "http://github.com/open-data/ckanext-fluent",
  "form_languages": ["en", "de", "fr", "it"],
  "dataset_fields": [
    {
      "field_name": "title",
      "label": {
          "en": "Title",
          "de": "Titel",
          "fr": "Titre",
          "it": "Titolo"
      },
      "form_attrs": {
        "data-module": "slug-preview-target"
      },
      "preset": "fluent_text_title",
      "form_placeholder": "eg. Yellow Submarine"
    },
    {
      "field_name": "name",
      "label": "URL",
      "preset": "dataset_slug",
      "form_placeholder": "eg. yellow-submarine"
    },
    {
      "field_name": "notes",
      "label": {
        "en": "Description",
        "de": "Beschreibung"
      },
      "preset": "fluent_markdown",
      "required": true
    },
    {
      "field_name": "keywords",
      "label": {
          "en": "Keywords",
          "fr": "Mots-cl\u00e9s"
      },
      "form_languages": ["en", "fr", "es"],
      "preset": "fluent_tags",
      "required": true
    }
  ],
  "resource_fields": [
    {
      "field_name": "url",
      "label": "URL",
      "preset": "resource_url_upload"
    }
  ]
}
